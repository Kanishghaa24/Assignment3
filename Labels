import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.Label;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class Q1 extends Application {
    public void start(Stage s) {
        Label l1=new Label("Hello, JavaFX!");
        Label l2=new Label("Java Version: "+System.getProperty("java.version"));
        Label l3=new Label("JavaFX Version: "+System.getProperty("javafx.version"));
        VBox v=new VBox(10,l1,l2,l3);
        s.setScene(new Scene(v,300,150));
        s.show();
    }
    public static void main(String[] a){launch(a);}
}
